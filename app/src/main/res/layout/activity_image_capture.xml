<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="school.zx.newboston.demo.CameraPicInvert.ImageCaptureActivity">

    <Button
        android:id="@+id/take_pic"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:onClick="launchCamera"
        android:text="Capture"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/pic_shown"
        android:layout_width="384dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/layer_handle"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:onClick="layerDrawableHandle"
        android:text="Overlay"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/take_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
